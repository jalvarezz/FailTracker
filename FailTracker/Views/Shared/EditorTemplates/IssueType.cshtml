@model FailTracker.Domain.IssueType

@{
    var options = Enum.GetValues(typeof(FailTracker.Domain.IssueType))
                  .Cast<FailTracker.Domain.IssueType>()
                  .Select(t => new SelectListItem{
                      Text = t.ToString(),
                      Value = t.ToString()
                  }).ToArray()
}

@Html.DropDownList("", options, new { @class = "form-control" })