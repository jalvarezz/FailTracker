@model FailTracker.Models.EditIssueForm

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Edit Issue</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.IssueID)

        <div class="form-group">
            @Html.LabelFor(model => model.Creator, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Label(Model.Subject)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Subject, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Subject)
                @Html.ValidationMessageFor(model => model.Subject)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IssueType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IssueType, new SelectList(Model.AvailableIssueTypes))
                @Html.ValidationMessageFor(model => model.IssueType)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AssignedToUserID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.AssignedToUserID, new SelectList(Model.AvailableUsers, "Id", "UserName"))
                @Html.ValidationMessageFor(model => model.AssignedToUserID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Body, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Body)
                @Html.ValidationMessageFor(model => model.Body)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
