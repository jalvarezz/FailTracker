@model IEnumerable<FailTracker.Models.IssueSummaryViewModel>

<h3>Issues Created By You</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IssueID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Creator)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IssueID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creator)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.IssueID }) |
            @Html.ActionLink("Details", "Details", new { id = item.IssueID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.IssueID })
        </td>
    </tr>
}

</table>
